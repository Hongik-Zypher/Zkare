{
  "name": "zkare",
  "version": "1.0.0",
  "description": "Zero-knowledge based medical record access control system",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "test": "jest",
    "compile:circuits": "cd circuits && ./compile.sh",
    "deploy": "npx hardhat run scripts/deploy_contracts.js --network localhost",
    "deploy:zkare": "npx hardhat run scripts/deploy_contracts.js --network localhost zkare",
    "deploy:verifiers": "npx hardhat run scripts/deploy_contracts.js --network localhost verifier",
    "deploy:viewer": "npx hardhat run scripts/deploy_contracts.js --network localhost viewer",
    "setup:env": "node scripts/setup_env.js"
  },
  "keywords": [
    "zk",
    "zero-knowledge",
    "medical-records",
    "blockchain",
    "ethereum"
  ],
  "author": "Zkare Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.13.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "snarkjs": "^0.7.2",
    "web3": "^1.10.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "circomlib": "^2.0.5",
    "concurrently": "^8.2.2",
    "hardhat": "^2.23.0",
    "hardhat-gas-reporter": "^1.0.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "directories": {
    "test": "test"
  }
}
